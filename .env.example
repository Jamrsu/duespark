## DueSpark local environment (copy to .env and fill values)

# Database
DATABASE_URL=postgresql+psycopg2://duespark:duespark@db:5432/duespark
SECRET_KEY=change-me

# Stripe (Test mode values)
STRIPE_CLIENT_ID=ca_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_REDIRECT_URI=http://localhost:8000/integrations/stripe/callback
# Only needed if you test webhooks locally (Stripe CLI or ngrok)
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxx
STRIPE_API_VERSION=2023-10-16
PUBLIC_BASE_URL=http://localhost:8000

# Email (Postmark)
EMAIL_PROVIDER=postmark
POSTMARK_SERVER_TOKEN=pm_xxxxxxxxxxxxxxxxxxxxxxxxxx
POSTMARK_MESSAGE_STREAM=outbound
# Either provide MAIL_FROM + MAIL_FROM_NAME, or a combined EMAIL_FROM
MAIL_FROM=no-reply@yourdomain.com
MAIL_FROM_NAME=DueSpark
EMAIL_FROM="DueSpark <no-reply@yourdomain.com>"
MAIL_REPLY_TO=ops@yourdomain.com

# Email (SES)
EMAIL_PROVIDER=ses
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# Optional configuration set name for events/metrics
# SES_CONFIGURATION_SET=duespark
