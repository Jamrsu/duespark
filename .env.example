## DueSpark local environment (copy to .env and fill values)

# Database - REPLACE WITH SECURE VALUES
# For local development with Docker:
# DATABASE_URL=postgresql+psycopg2://duespark:YOUR_SECURE_PASSWORD@db:5432/duespark
# For production, use secure credentials:
DATABASE_URL=postgresql+psycopg2://username:password@host:5432/database

# Security - GENERATE SECURE VALUES
# Generate with: openssl rand -base64 32
SECRET_KEY=REPLACE_WITH_SECURE_32_BYTE_KEY

# Stripe (Test mode values)
STRIPE_CLIENT_ID=ca_YOUR_STRIPE_CLIENT_ID
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_REDIRECT_URI=http://localhost:8005/integrations/stripe/callback
# Only needed if you test webhooks locally (Stripe CLI or ngrok)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_API_VERSION=2023-10-16
PUBLIC_BASE_URL=http://localhost:8005

# Email (Postmark)
EMAIL_PROVIDER=postmark
POSTMARK_SERVER_TOKEN=pm_YOUR_SERVER_TOKEN
POSTMARK_MESSAGE_STREAM=outbound
# Either provide MAIL_FROM + MAIL_FROM_NAME, or a combined EMAIL_FROM
MAIL_FROM=no-reply@yourdomain.com
MAIL_FROM_NAME=DueSpark
EMAIL_FROM="DueSpark <no-reply@yourdomain.com>"
MAIL_REPLY_TO=ops@yourdomain.com

# Email (SES)
EMAIL_PROVIDER=ses
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# Optional configuration set name for events/metrics
# SES_CONFIGURATION_SET=duespark
