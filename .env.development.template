# DueSpark Development Environment Template
# Copy this file to .env.development and fill in your actual values
# ⚠️  WARNING: Never commit real credentials to version control

#################################################################
# DATABASE CONFIGURATION
#################################################################
# For local development with Docker Compose
POSTGRES_DB=duespark_dev
POSTGRES_USER=duespark_dev
# Generate secure password: openssl rand -base64 16
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# Database connection string
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

#################################################################
# SECURITY CONFIGURATION
#################################################################
# Generate with: openssl rand -base64 32
SECRET_KEY=YOUR_32_BYTE_SECRET_KEY_HERE
ENCRYPTION_KEY=YOUR_32_BYTE_ENCRYPTION_KEY_HERE
JWT_SECRET_KEY=YOUR_32_BYTE_JWT_SECRET_KEY_HERE

#################################################################
# ADMIN CONFIGURATION
#################################################################
ADMIN_EMAIL=admin@yourdomain.com
# Use a secure password, not default values
ADMIN_PASSWORD=YOUR_SECURE_ADMIN_PASSWORD_HERE

#################################################################
# STRIPE CONFIGURATION (Test mode for development)
#################################################################
STRIPE_CLIENT_ID=ca_YOUR_TEST_STRIPE_CLIENT_ID
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_TEST_WEBHOOK_SECRET
STRIPE_API_VERSION=2023-10-16
STRIPE_REDIRECT_URI=http://localhost:8005/integrations/stripe/callback

#################################################################
# EMAIL CONFIGURATION
#################################################################
EMAIL_PROVIDER=postmark
POSTMARK_SERVER_TOKEN=YOUR_TEST_POSTMARK_TOKEN
POSTMARK_MESSAGE_STREAM=outbound
MAIL_FROM=dev@yourdomain.com
MAIL_FROM_NAME=DueSpark Dev
EMAIL_FROM="DueSpark Dev <dev@yourdomain.com>"
MAIL_REPLY_TO=dev@yourdomain.com

#################################################################
# APPLICATION CONFIGURATION
#################################################################
ENVIRONMENT=development
DEBUG=true
PUBLIC_BASE_URL=http://localhost:8005
API_V1_STR=/api/v1

# CORS for development (localhost only)
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

#################################################################
# FRONTEND CONFIGURATION
#################################################################
VITE_API_URL=http://localhost:8005
VITE_API_V1_STR=/api/v1
VITE_APP_NAME=DueSpark Dev
VITE_APP_VERSION=0.1.0
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false