# DueSpark Frontend - Production Environment Variables for Render Backend
# Set these in Vercel Dashboard Environment Variables

# API Configuration (Render backend URL)
VITE_API_BASE_URL=https://duespark-backend.onrender.com
VITE_APP_URL=https://app.duespark.com

# Application Configuration
VITE_APP_NAME=DueSpark
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true

# External Services (set in Vercel dashboard)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_...
VITE_SENTRY_DSN=https://...@sentry.io/...

# Performance & Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_LOG_LEVEL=error

# PWA Configuration
VITE_PWA_NAME=DueSpark
VITE_PWA_SHORT_NAME=DueSpark
VITE_PWA_DESCRIPTION=Smart Invoice Management & Automated Reminders

# Social & SEO
VITE_APP_DESCRIPTION=Get paid on time with smart invoice reminders
VITE_APP_KEYWORDS=invoice,reminder,payment,freelancer,business
VITE_CONTACT_EMAIL=support@duespark.com
VITE_SUPPORT_URL=https://help.duespark.com

# URLs for various environments
VITE_TERMS_URL=https://duespark.com/terms
VITE_PRIVACY_URL=https://duespark.com/privacy
VITE_HELP_URL=https://help.duespark.com