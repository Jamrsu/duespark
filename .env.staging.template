# DueSpark Staging Environment Template
# For staging/testing deployment before production
# ⚠️  Use different credentials from production

#################################################################
# DATABASE CONFIGURATION (STAGING)
#################################################################
DATABASE_URL=postgresql+psycopg2://username:password@host:5432/duespark_staging

#################################################################
# SECURITY CONFIGURATION
#################################################################
# Generate staging-specific keys with: openssl rand -base64 32
SECRET_KEY=STAGING_32_BYTE_SECRET_KEY_REQUIRED
ENCRYPTION_KEY=STAGING_32_BYTE_ENCRYPTION_KEY_REQUIRED
JWT_SECRET_KEY=STAGING_32_BYTE_JWT_SECRET_KEY_REQUIRED

#################################################################
# ADMIN CONFIGURATION (STAGING)
#################################################################
ADMIN_EMAIL=admin@staging.yourdomain.com
ADMIN_PASSWORD=SECURE_STAGING_ADMIN_PASSWORD

#################################################################
# STRIPE CONFIGURATION (TEST MODE)
#################################################################
# Use test mode for staging
STRIPE_CLIENT_ID=ca_YOUR_TEST_STRIPE_CLIENT_ID
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_TEST_WEBHOOK_SECRET
STRIPE_API_VERSION=2023-10-16
STRIPE_REDIRECT_URI=https://api-staging.yourdomain.com/integrations/stripe/callback

#################################################################
# EMAIL CONFIGURATION (STAGING)
#################################################################
EMAIL_PROVIDER=postmark
POSTMARK_SERVER_TOKEN=YOUR_STAGING_POSTMARK_TOKEN
POSTMARK_MESSAGE_STREAM=outbound
MAIL_FROM=staging@yourdomain.com
MAIL_FROM_NAME=DueSpark Staging
EMAIL_FROM="DueSpark Staging <staging@yourdomain.com>"
MAIL_REPLY_TO=staging@yourdomain.com

#################################################################
# APPLICATION CONFIGURATION (STAGING)
#################################################################
ENVIRONMENT=staging
DEBUG=false
PUBLIC_BASE_URL=https://api-staging.yourdomain.com
API_V1_STR=/api/v1

# CORS for staging
BACKEND_CORS_ORIGINS=["https://app-staging.yourdomain.com"]

#################################################################
# FRONTEND CONFIGURATION (STAGING)
#################################################################
VITE_API_BASE_URL=https://api-staging.yourdomain.com
VITE_APP_URL=https://app-staging.yourdomain.com
VITE_APP_NAME=DueSpark Staging
VITE_APP_VERSION=1.0.0-staging
VITE_APP_ENV=staging

VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_LOG_LEVEL=info

# Test keys for staging
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY