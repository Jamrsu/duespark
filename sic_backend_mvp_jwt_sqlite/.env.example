# DueSpark Backend Environment Configuration Template
# ⚠️  SECURITY WARNING: Never commit real secrets to version control
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL: DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/duespark

# Security - GENERATE SECURE VALUES (REQUIRED)
# Generate SECRET_KEY with: openssl rand -base64 32
# Generate JWT_SECRET_KEY with: openssl rand -base64 32
SECRET_KEY=REPLACE_WITH_SECURE_32_BYTE_KEY_GENERATED_BY_OPENSSL
JWT_SECRET_KEY=REPLACE_WITH_SECURE_32_BYTE_JWT_KEY_GENERATED_BY_OPENSSL

# Stripe Configuration (Backend-specific)
STRIPE_CLIENT_ID=ca_REPLACE_WITH_YOUR_STRIPE_CLIENT_ID
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_ACTUAL_STRIPE_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_WEBHOOK_SECRET

# Email Provider
EMAIL_PROVIDER=postmark
POSTMARK_SERVER_TOKEN=pm_YOUR_SERVER_TOKEN_HERE

# Environment
ENVIRONMENT=development
# WARNING: Set DEBUG=false in production
DEBUG=true

# API Configuration
API_V1_STR=/api/v1
# WARNING: Update CORS origins for production deployment
# For development:
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
# For production, replace with actual domains:
# BACKEND_CORS_ORIGINS=["https://app.yourdomain.com", "https://yourdomain.com"]

# Admin Configuration - CHANGE THESE VALUES
ADMIN_EMAIL=admin@yourdomain.com
FIRST_SUPERUSER_EMAIL=admin@yourdomain.com
# WARNING: Use a secure password, not the default
FIRST_SUPERUSER_PASSWORD=REPLACE_WITH_SECURE_PASSWORD